<footer>
  <div id="sub-footer">
    <div class="container">
      <div class="row">
        <div class="col-lg-6">
          <div class="copyright">
            <p>
              <%= t "copyright" %>
            </p>
          </div>
        </div>
        <div class="col-lg-6">
          <ul class="social-network">
            <li>
              <%= link_to "#" do %>
                  <i class="fa fa-twitter"></i>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                  <i class="fa fa-facebook"></i>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                  <i class="fa fa-linkedin"></i>
              <% end %>
            </li>
            <li>
              <%= link_to t(:contact), page_path(page: :contact) %>
            </li>
            <li>
              <%= link_to t(:help), page_path(page: :help) %>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</footer>
