<div id="nav-wrapper">
  <div id="nav" class="navbar navbar-default navbar-inner">
    <div class="container">
      <div class="navbar-header">
        <a class="navbar-brand navbar-brand-centered">
          <%= image_tag "logo.png" %>
        </a>
      </div>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <%= link_to root_path do %>
            <h3><%= t "title" %></h3>
          <% end %>
        </ul>
        <ul class="nav navbar-nav">
          <%= form_tag search_path, method: :get,
            class: "navbar-form search-form", id: "livesearch_form" do %>
              <div class="form-group dropdown">
                <%= text_field_tag :search, params[:search],
                  class: "form-control dropdown-toggle",
                  placeholder: t("header.search") %>
              </div>
              <%= button_tag type: :submit, class: "btn btn-default" do %>
                <i class="fa fa-search"></i>
              <% end %>
            <% end %>
        </ul>

        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <% if current_user.admin? %>
              <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown">
                  <%= t "promotion.promotion" %><b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li>
                    <%= link_to t("promotion.tour_rule"),
                      admin_tour_rules_path %>
                  </li>
                </ul>
              </li>
              <li>
                <%= link_to t("header.bookings_manaer"),
                  admin_bookings_path %>
              </li>
              <li>
                <%= link_to t("header.reviews_manager"),
                  admin_reviews_path %>
              </li>
              <li>
                <%= link_to t("header.tour_manager"),
                  admin_tours_path %>
              </li>
              <li>
                <%= link_to t("header.places_manager"),
                  admin_places_path %>
              </li>
              <li>
                <%= link_to t("header.users_manager"),
                  admin_users_path %>
              </li>
            <% else %>
              <ul class="nav navbar-nav">
                <li>
                  <%= link_to t(:tour), tours_path %>
                </li>
                <li>
                  <%= link_to t("controller.booking"),
                    user_orders_path(current_user) %>
                </li>
              </ul>
            <% end %>

            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown">
                <%= current_user.name %><b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to t("header.profile"),
                    user_path(current_user) %>
                </li>
                <li>
                  <%= link_to t("header.edit"),
                    edit_user_registration_path %>
                </li>
                <li>
                  <%= link_to t("header.sign_out"),
                    destroy_user_session_path, method: :delete %>
                </li>
              </ul>
            </li>
          <% else %>
            <li>
              <%= link_to t(:tour), tours_path %>
            </li>
            <li>
              <%= link_to t(:signup), new_user_registration_path %>
            </li>
            <li>
              <%= link_to t(:login), new_user_session_path %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
