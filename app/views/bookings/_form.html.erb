<div class="container">
  <div class="col-md-5 col-md-offset-3 square-hot">
    <%= form_for @book, remote: true do |f| %>
      <%= f.hidden_field :tour_id, value: @tour.id %>
      <div class="form-group">
        <%= f.label :contact_email %>
        <%= f.text_field :contact_email, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :phone_number %>
        <%= f.text_field :phone_number, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :number_member %>
        <%= f.number_field :number_member, min: 1, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit t("tours.submit"), class: "btn btn-default" %>
      </div>
    <% end %>
  </div>
</div>
