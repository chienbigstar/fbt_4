<div class="container" >
  <div class="col-lg-12" >
    <div class="panel panel-default" >
      <div class="panel-heading" >
        <%= t "tour_rule.list_tour" %>
      </div>
      <div class="panel-body" >
        <table class="table" >
          <tr>
            <th><%= t "tour_rule.select" %></th>
            <th><%= t "tour_rule.name" %></th>
          </tr>
          <% @places.each do |p| %>
              <tr>
                <td><%= check_box_tag :check_rule, p.id %></td>
                <td><%= p.name %></td>
              </tr>
          <% end %>
          <tr>
            <%= paginate @places %>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>
