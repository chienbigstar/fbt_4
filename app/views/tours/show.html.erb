<section id="content">
  <div class="container">
    <div class="row">
      <h2 class="text-center"><%= t "view.tour" %></h2>
      <div class="col-lg-12">

        <h3 class="col-md-12 text-center">
          <strong><i>
            <%= @tour.name %></i></strong>
        </h3>

        <h3 class="col-md-12">
          <h5 class="div-star-avg-tour">
            <%= t "view.rate" %>
            <strong>
              <%= t "view.rate_tour_avg",
                avg: @tour.rate_avg || 0, vote: @tour.rates("quality").count %>
            </strong>
          </h5>
          <h6><i><%= t "view.each_hour_rate_avg" %></i></h6>

          <%= t "view.you_rate" %>
          <% if user_signed_in? %>
            <%= rating_for_user @tour, current_user, "quality",
              disable_after_rate: true %>
          <% else %>
            <div class="row">
              <div class="alert alert-warning col-md-4 col-md-offset-4 text-center">
                <%= t("view.let_login_to_rate") %>
              </div>
            </div>
          <% end %>
        </h3>

        <div class="text-center">
          <% unless @tour.image.nil? %>
            <%= image_tag @tour.image %>
          <% end %>
        </div>

        <div class="col-md-12">
          <h3><%= t "view.category" %>
            <% @tour.tag_list.each do |tag| %>
              <%= link_to tag, tag_path(tag), class: "tag" %>
            <% end %>
          </h3>
        </div>

        <div class="col-md-12 custom-div-text-tour">
          <h3><%= t "view.description" %></h3>
          <%= @tour.description %>
        </div>

      </div>
    </div>

    <div class="row">
      <div class="col-lg-8">
        <h3 class="text-center"><%= t "tours.schedule" %></h3>
        <div class="custom-div-text-tour">
          <%= raw @tour.schedule %>
        </div>
      </div>
      <div class="col-lg-4">
        <h3 class="text-center"><%= t "tours.info" %></h3>

        <div>
          <h4>
            <%= t "view.durations" %>
            <%= @tour.time_tour %><%= t "view.day" %>
          </h4>
          <div class="durations_date">
            <%= t "view.start_date" %>
            <%= l @tour.start_day, format: :short %>
          </div>
        </div>

        <div class="col-md-12">
          <h3 class="price-tour text-left">
            <%= t "view.label_price" %>
            <% if @tour.tour_final_price.present? %>
              <%= t "view.price", price: number_to_currency(@tour.tour_final_price.price) %>
              <div class="old">
                <%= t "view.price", price: number_to_currency(@tour.price) %>
              </div>
            <% else %>
              <%= t "view.price", price: number_to_currency(@tour.tour_final_price.price) %>
            <% end %>
          </h3>
        </div>
      </div>
    </div>
  </div>
</section>
<% if @tour.expire? %>
  <div class="row text-center" id="booking">
    <h3 class="alert alert-danger col-md-6 col-md-offset-3">
      <%= t "view.tour_expire" %>
    </h3>
  </div>
<% else %>
  <div class="row text-center" id="booking">
    <%= link_to t("tours.booking_tour"), new_booking_path(id: @tour.id),
      remote: true, class: "btn btn-success" if user_signed_in? %>
  </div>

  <% unless user_signed_in? %>
    <div class="row">
      <div class="alert alert-warning col-md-4 col-md-offset-4 text-center">
        <%= t("view.let_login_to_booking") %>
      </div>
    </div>
  <% end %>
<% end %>

<div class="row text-center">
  <%= link_to t("view.create_review"), new_tour_review_path(@tour),
    class: "btn btn-primary" %>
</div>

<div class="row col-md-10 col-md-offset-1">
  <div class="all_reviews">
    <div class="row text-center">
      <h2><%= t "view.titlereview" %></h2>
    </div>

    <%= render "tours/reviews" %>

  </div>
</div>
